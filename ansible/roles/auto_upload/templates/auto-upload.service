[Unit]
Description=Auto Uploader for the Janitor

StartLimitIntervalSec=90
StartLimitBurst=3

[Service]
User={{ janitor_user }}
Type=simple
WorkingDirectory={{ janitor_home }}
ExecStart={{ janitor_venv }}/bin/python -m janitor.debian.auto_upload --listen-address={{ janitor_auto_upload_address }} --port={{ janitor_auto_upload_port }} --config={{ janitor_conf_path }} --dput-host={{ janitor_auto_upload_dput_host }} {% for distro in janitor_auto_upload_distributions %} --distribution={{ distro }}{% endfor %}{% if janitor_auto_upload_source_only %} --source-only{% endif %}

Restart=on-failure
RestartSec=90s

[Install]
WantedBy=default.target
