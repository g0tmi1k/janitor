[Unit]
Description=Archive Management for the Janitor

StartLimitIntervalSec=90
StartLimitBurst=3

[Service]
User={{ janitor_user }}
Type=simple
WorkingDirectory={{ janitor_home }}
ExecStart={{ janitor_venv }}/bin/python -m janitor.debian.archive --listen-address {{ janitor_archive_address }} --port={{ janitor_archive_port }} --config={{ janitor_conf_path }} --cache-directory={{ janitor_home }}/cache-archive --dists-directory={{ janitor_home }}/dists
Restart=on-failure
RestartSec=90s

[Install]
WantedBy=default.target
