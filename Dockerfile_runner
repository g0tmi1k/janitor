FROM ghcr.io/jelmer/janitor/base:latest
MAINTAINER Jelmer Vernooij <jelmer@debian.org>
EXPOSE 9911
RUN apt update && apt install -y --no-install-recommends python3-launchpadlib python3-keyrings.alt python3-paramiko
ENTRYPOINT ["python3", "-m", "janitor.runner", "--port=9911", "--listen-address=0.0.0.0"]
